	"version": "0.2.0",
	"configurations": [
		{
			"name": "Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/serverside/server.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"console": "internalConsole",
			"internalConsoleOptions": "openOnFirstSessionStart"
		},
		{
			"name": "Client",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:80/",
			"webRoot": "${workspaceFolder}/TextMesg/",
			//"preLaunchTask": "DelayClientLaunch",
			"internalConsoleOptions": "openOnFirstSessionStart",
			"preLaunchTask": {
				"identifier": "ng serve --port 80",
				"type": "npm",
				"script": "start",
				"problemMatcher": [],
				"group": {
					"kind": "build",
					"isDefault": true
        		}
			}
		}
	],
	"compounds": [
		{
			"name": "Server/Client",
			"configurations": [
				"Server",
				"Client"
			]
		}
	]
}